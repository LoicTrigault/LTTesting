/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: #1e1e1e;
    color: white;
}

a {
    text-decoration: none;
    color: inherit;
}

header {
    background-color: #1a1a1a;
    padding: 20px;
}

nav ul {
    display: flex;
    justify-content: center;
    list-style: none;
}

nav ul li {
    margin: 0 20px;
}

nav ul li a {
    font-size: 18px;
    color: #ff6600;
}

#intro {
    background-color: #333;
    padding: 60px 0;
    text-align: center;
}

#intro h1 {
    font-size: 48px;
    margin-bottom: 20px;
    color: #ff6600;
}

#intro p {
    font-size: 18px;
    color: #fff;
}

section {
    padding: 60px 0;
}

.container {
    width: 80%;
    margin: 0 auto;
}

#competences h2, #projets h2, #contact h2 {
    font-size: 36px;
    text-align: center;
    color: #ff6600;
    margin-bottom: 30px;
}

.competence, .projet {
    background-color: #444;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 8px;
}

.competence h3, .projet h3 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #ff6600;
}

.competence p, .projet p {
    font-size: 16px;
    color: #ccc;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

form input, form textarea {
    width: 60%;
    padding: 10px;
    margin: 10px 0;
    border: none;
    border-radius: 4px;
}

form button {
    width: 60%;
    padding: 10px;
    background-color: #ff6600;
    border: none;
    border-radius: 4px;
    color: white;
    cursor: pointer;
}

form button:hover {
    background-color: #e55b00;
}

footer {
    background-color: #1a1a1a;
    padding: 20px;
    text-align: center;
}

footer p {
    color: #ccc;
}
